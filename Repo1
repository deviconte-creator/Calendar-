name: Build Android APK

on:
  workflow_dispatch:
  push:
    paths:
      - "daycounter-calendar-android.zip"
      - ".github/workflows/android.yml"

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Java 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: "17"

      - name: Set up Android SDK
        uses: android-actions/setup-android@v3

      - name: Unzip project
        run: |
          sudo apt-get update && sudo apt-get install -y unzip
          unzip -q daycounter-calendar-android.zip
          cd DayCounterCalendarAndroid
          chmod +x ./gradlew
          ./gradlew --no-daemon assembleDebug
          echo "APK_PATH=$(pwd)/app/build/outputs/apk/debug/app-debug.apk" >> $GITHUB_OUTPUT
        id: build_apk

      - name: Upload APK artifact
        uses: actions/upload-artifact@v4
        with:
          name: DayCounterCalendar-APK
          path: ${{ steps.build_apk.outputs.APK_PATH }}
